# HumanOntology Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# ====================
# Database Configuration
# ====================
DB_HOST=db
DB_PORT=5432
DB_NAME=humansontology_prod
DB_USER=humansontology_user
# IMPORTANT: Use a strong password in production!
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# IMPORTANT: Set Redis password in production!
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ====================
# JWT Configuration
# ====================
# CRITICAL: Generate a new secret with: openssl rand -hex 32
JWT_SECRET_KEY=REPLACE_WITH_GENERATED_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# Application Configuration
# ====================
DEBUG=False
SEED_DATABASE=false
ENVIRONMENT=production

# CORS - Update with your actual domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================
# Email Configuration
# ====================
# Production SMTP settings - Example with SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_USE_TLS=True
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL for email links
FRONTEND_URL=https://yourdomain.com

# ====================
# OAuth Configuration
# ====================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Telegram OAuth
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ====================
# File Upload
# ====================
UPLOAD_DIR=uploads

# ====================
# Sentry Error Tracking
# ====================
# Optional but recommended for production
SENTRY_DSN=your_sentry_dsn
SENTRY_ENABLE_TRACING=true
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false

# ====================
# Frontend Configuration
# ====================
NODE_ENV=production
VITE_GRAPHQL_ENDPOINT=https://yourdomain.com/graphql
VITE_APP_ENV=production
VITE_APP_URL=https://yourdomain.com
VITE_DEBUG=false

# ====================
# Port Configuration
# ====================
# In production, you might use different ports or reverse proxy
BACKEND_PORT=8000
FRONTEND_PORT=3000
