# HumanOntology Environment Configuration
# Copy this file to .env and update with your values

# ====================
# Database Configuration
# ====================
DB_HOST=db
DB_PORT=5432
DB_NAME=templates
DB_USER=template_user
DB_PASSWORD=template_password

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ====================
# JWT Configuration
# ====================
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-MUST-BE-CHANGED
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# Application Configuration
# ====================
DEBUG=False
SEED_DATABASE=true
ENVIRONMENT=production

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# Email Configuration
# ====================
# For development (with MailPit)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=False
FROM_EMAIL=noreply@humansontology.dev

# For production, use real SMTP server
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_USE_TLS=True

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# ====================
# OAuth Configuration
# ====================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Telegram OAuth (optional)
TELEGRAM_BOT_TOKEN=

# ====================
# File Upload
# ====================
UPLOAD_DIR=uploads

# ====================
# Sentry Error Tracking (optional)
# ====================
SENTRY_DSN=
SENTRY_ENABLE_TRACING=false
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false

# ====================
# Frontend Configuration
# ====================
NODE_ENV=production
VITE_GRAPHQL_ENDPOINT=http://localhost:8000/graphql/
VITE_APP_ENV=production
VITE_APP_URL=http://localhost:3000
VITE_DEBUG=false

# ====================
# Port Configuration
# ====================
BACKEND_PORT=8000
FRONTEND_PORT=3000
MAILPIT_SMTP_PORT=1025
MAILPIT_WEB_PORT=8025
